    <script>
        function predictPrice() {
            const name = document.getElementById("name").value || document.getElementById("nameInput").value;
            const location = document.getElementById("location").value || document.getElementById("locationInput").value;
            const year = document.getElementById("year").value;
            const kilometers = document.getElementById("kilometers").value;
            const fuel = document.getElementById("fuel").value || document.getElementById("fuelInput").value;
            const transmission = document.getElementById("transmission").value || document.getElementById("transmissionInput").value;
            const owner = document.getElementById("owner").value || document.getElementById("ownerInput").value;
            const mileage = document.getElementById("mileage").value;
            const engine = document.getElementById("engine").value;
            const power = document.getElementById("power").value;
            const seats = document.getElementById("seats").value;

            // Simulated prediction for demo purposes
            const price = Math.random() * 20 + 5; // Random price between 5 and 25 lakhs

            document.getElementById("result").innerText = `Predicted Price: â‚¹${price.toFixed(2)} Lakh`;
